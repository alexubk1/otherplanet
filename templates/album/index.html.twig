{% extends 'base.html.twig' %}

{% block title %}Album{% endblock %}

{% block body %}
    <section class="">
        <div class="container-header-album"></div>
        <div class="img_caption">
            <h2 class="text-box title-header text-center">Album<hr></h2>
        </div>
    </section>
    <section  class="image-section">
        <h1 style="text-align: center;"class=" main dot-h1 pt-30">- - - - - - - - - -</h1>
        <div class="parent-grid pt-100">
            <div class="grid main pb-100 grid-album">
                <div class="grid-sizer"></div>
                <div class="gutter-sizer"></div>
                {% if albums is not null %}
                    {% for album in albums %}
                        {% if album.article is not null %}
                        <div class="grid-item  overlay-image">
                            <a href="{{ path('album_title', {album:album.id}) }}#image-section"><img class="img-show image-hover" alt="gallery picture" src="{{ asset('uploads/images/' ~ album.article.picture|raw) }}"></a>
                            <div><a href="{{ path('album_title', {album:album.id}) }}#image-section">
                            <div class="text">{{ album.title }}</div>
                            <div class="text-count">{{ album.count}}
                            {% if album.count < 2  %}
                                image
                            {% else %}
                                images
                            {% endif %}
                            </div>
                            <div class="text-hover">Voir la gallerie</div>
                                </a></div>

                        </div>
                        {% endif %}
                    {% endfor %}
                {% else %}
                    <div><p>This category has no content</p> </div>
                {% endif %}
            </div>
            <footer id="mainFooter" class="mainFooter" style="z-index: 5">
                <div class="container-fluid">
                    <div class="row copyrights">
                        <div class="col-md-2 col-xs-12">
                            <p><a class="footer-a" href="">General Conditions </a></p>
                        </div>
                        <div class="col-md-3 col-xs-12">
                            <p><a class="footer-a" href="">Admin</a></p>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </section>

{% endblock %}